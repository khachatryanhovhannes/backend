generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())

  name     String
  email    String @unique
  password String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  refreshToken String?

  permissions  Role[] @relation("UserRoles")
  permissionId Int?

  @@map("users")
}

model Role {
  id Int @id @default(autoincrement())

  name String @unique
  code String @unique

  users User[] @relation("UserRoles")

  @@map("roles")
}
